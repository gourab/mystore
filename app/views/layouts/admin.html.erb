<div style=" border-bottom:1px solid #999; margin:4px 20px 0 0"></div>
<p>&nbsp;</p>
<div class="admin_bg">

<div class=" admin_right">
<h3>Listing the details of all stores</h3>
<div style="height:10px;"></div>
<table border="3" align="center">

  <tr>
    <th>Organizationname</th>
    <th>Established In</th>
    <th>Cause</th>
    <th colspan="2" align="center">Actions</th>
  </tr>
  <% for store in @stores %>

    <tr>
      <td><%= store.organizationname %></td>
      <td><%= store.established_in %></td>
      <td><%= store.cause %></td>
      <% if User.find(store.user_id).status==true %>
        <td><%= link_to "Inactive", inactive_path(:id=>store.user_id) %></td>
        <% else %>
      <td><%= link_to "Active", active_path(:id=>store.user_id) %></td>
    <% end %>
   </tr>
  <% end %>
</table>

<br />


