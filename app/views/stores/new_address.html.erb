<script type="text/javascript">
  var order_first_name = new LiveValidation('order_first_name');
  order_first_name.add(Validate.Presence);
  var order_last_name = new LiveValidation('order_last_name');
  order_last_name.add(Validate.Presence);
  var order_email = new LiveValidation('order_email');
  order_email.add(Validate.Presence);
  order_email.add(Validate.Email);
  function form_validation(){
    var order_address1 = new LiveValidation('order_address1');
    var order_city = new LiveValidation('order_city');
    var order_zip_code = new LiveValidation('order_zip_code');
    var order_state = new LiveValidation('order_state');
    if(document.getElementById("order_shipping_yes").checked){
      order_address1.add(Validate.Presence);
      order_city.add(Validate.Presence);
      order_zip_code.add(Validate.Presence);
      order_state.add(Validate.Presence);
    }
    else{
      order_address1.remove(Validate.Presence);
      order_city.remove(Validate.Presence);
      order_zip_code.remove(Validate.Presence);
      order_state.remove(Validate.Presence);
      if(order_first_name.validate() && order_last_name.validate() && order_email.validate()){document.shipingForm.submit();}
      else{return false;}
    }
  }
</script>