<%= javascript_include_tag  "multifile" %>

<% form_for(@item,:html => { :multipart => true } ) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br />
    <%= f.text_field :quantity %>
  </div>
  <div class="field">
    <%= f.label :size %><br />
    <%= f.text_field :size %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :shippingprice %><br />
    <%= f.text_field :shippingprice %>
  </div>
  <div>Pending Attachments: (Max of <%= Item::Max_Attachments %>)
    <% if @item.assets.count >= Item::Max_Attachments %>
      <input id="newfile_data" type="file" disabled />
    <% else %>
      <input id="newfile_data" type="file" />

    <%#= file_field :attachment ,:data , :id=>"newfile_data"  %>
    <% end %>
    <div id="attachment_list"><ul id="pending_files"></ul></div>
    <script type="text/javascript">
      var multi_selector = new MultiSelector($('pending_files'), 4);
      multi_selector.addElement($('newfile_data'));
    </script>

  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>